  return new Promise(function(resolve) {
    resolve();
  });
}

/**
 * Get details of a specific book by ID
 */
exports.booksBookIdGET = function(_bookId) {
  return new Promise(function(resolve) {
    resolveWithExample(resolve, {
      "category_id" : 1,
      "published_year" : 5,
      "id" : 0,
      "title" : "title",
      "author_id" : 6
    });
  });
}

