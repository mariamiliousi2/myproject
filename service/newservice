'use strict';

/**
 * Helper function to resolve promise with example data
 * Eliminates code duplication by centralizing example response handling
 */
function resolveWithExample(resolve, exampleData) {
  var examples = {};
  examples['application/json'] = exampleData;
  if (Object.keys(examples).length > 0) {
    resolve(examples[Object.keys(examples)[0]]);
  } else {
    resolve();
  }
}

/**
 * Delete an author by ID
 */
exports.authorsAuthorIdDELETE = function(_authorId) {
  return new Promise(function(resolve) {
    resolve();
  });
}

/**
 * Get details of a specific author by ID
 */
exports.authorsAuthorIdGET = function(_authorId) {
  return new Promise(function(resolve) {
    resolveWithExample(resolve, {
      "name" : "name",
      "id" : 0
    });
  });
}

/**
 * Update an author by ID
 */
exports.authorsAuthorIdPUT = function(_body, _authorId) {
  return new Promise(function(resolve) {
    resolveWithExample(resolve, {
      "name" : "name",
      "id" : 0
    });
  });
}

/**
 * Get all authors from the database
 */
exports.authorsGET = function() {
  return new Promise(function(resolve) {
    resolveWithExample(resolve, [ {
      "name" : "name",
      "id" : 0
    }, {
      "name" : "name",
      "id" : 0
    } ]);
  });
}

/**
 * Add a new author to the database
 */
exports.authorsPOST = function(_body) {
  return new Promise(function(resolve) {
    resolveWithExample(resolve, {
      "name" : "name",
      "id" : 0
    });
  });
}

/**
 * Delete a book by ID
 */
